<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_16"
    android:paddingTop="@dimen/spacing_16"
    android:paddingEnd="@dimen/spacing_16"
    xmlns:tools="http://schemas.android.com/tools"
    app:showDividers="middle">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/confirmTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/md_black_1000"
        android:textSize="17sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/confirmMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/md_black_1000"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_16"
        android:background="@color/md_grey_100" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNegative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_null"
            android:layout_marginEnd="@dimen/spacing_null"
            android:layout_marginBottom="@dimen/spacing_null"
            android:layout_weight="1"
            android:textColor="#007aff"
            app:strokeWidth="@dimen/spacing_null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPositive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_null"
            android:layout_marginEnd="@dimen/spacing_null"
            android:layout_marginBottom="@dimen/spacing_null"
            android:layout_weight="1"
            android:textColor="#ff2d55"
            app:strokeWidth="@dimen/spacing_null" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>