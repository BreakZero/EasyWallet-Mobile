<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Wallet" />

    <style name="Wallet.Input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:inset">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Wallet.OnlyIconButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">?attr/colorAccent</item>
        <item name="elevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Wallet.OnlyIconRadio" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Wallet.MainButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="rippleColor">?attr/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>